.bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.mask {
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, .6);
    top: 0;
    left: 0;
}
.content {
    width: 100%;
    height: calc(100% - 100rpx);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}

.tabbar {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 0;
    /* background-color: aliceblue; */
}